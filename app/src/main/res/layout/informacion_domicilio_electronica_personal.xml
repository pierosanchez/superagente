<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorfondoactivity"
    android:orientation="vertical"
    tools:context="com.example.ctorres.superagentemovil3.superagente.InformacionDomicilioElectronicaPersonal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/textViewInfoElectronica"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorFondo"
            android:gravity="center"
            android:text="@string/titulo_informacion_domicilio_electronica"
            android:textColor="@color/color_blanco"
            android:textSize="16dp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_info_departamento"
                        android:textStyle="bold"
                        android:textSize="16dp"/>

                    <EditText
                        android:id="@+id/txt_departamento"
                        android:layout_width="190dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:background="@color/color_blanco" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_info_provincia"
                        android:textStyle="bold"
                        android:textSize="16dp"/>

                    <EditText
                        android:id="@+id/txt_provincia"
                        android:layout_width="190dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="54dp"
                        android:background="@color/color_blanco" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_info_distrito"
                        android:textStyle="bold"
                        android:textSize="16dp"/>

                    <EditText
                        android:id="@+id/txt_distrito"
                        android:layout_width="190dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="65dp"
                        android:background="@color/color_blanco" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_info_direccion"
                        android:textStyle="bold"
                        android:textSize="16dp"/>

                    <EditText
                        android:id="@+id/txt_direccion"
                        android:layout_width="190dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="54dp"
                        android:background="@color/color_blanco" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_info_tel_fijo"
                        android:textStyle="bold"
                        android:textSize="16dp"/>

                    <EditText
                        android:id="@+id/txt_tel_fijo"
                        android:layout_width="190dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="30dp"
                        android:background="@color/color_blanco"
                        android:inputType="phone"
                        android:maxLength="9"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="130dp">

                    <LinearLayout
                        android:id="@+id/btn_aceptar_cuenta_tarjeta_abono"
                        android:layout_width="190dp"
                        android:layout_height="50dp"
                        android:background="@color/color_blanco"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/btn_aceptar"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_cancelar_cuenta_tarjeta_abono"
                        android:layout_width="190dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="5dp"
                        android:background="@color/color_blanco"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/btn_cancelar"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
