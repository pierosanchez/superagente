<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorfondoactivity"
    tools:context="com.example.ctorres.superagentemovil3.superagente.AgregarBeneficiarioUsuario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/textViewInfoElectronica"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorFondo"
            android:gravity="center"
            android:text="@string/titulo_ingreso_datos_beneficiario"
            android:textColor="@color/color_blanco"
            android:textSize="16dp" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayoutDniBeneficiario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_dni_benef" />

                    <EditText
                        android:id="@+id/txt_dni"
                        android:layout_width="170dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="145dp"
                        android:background="@color/color_blanco"
                        android:inputType="number"
                        android:maxLength="8" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutNombres"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textViewNombre"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_nombre_benef" />

                    <EditText
                        android:id="@+id/txt_nombre"
                        android:layout_width="170dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="110dp"
                        android:background="@color/color_blanco"
                        android:inputType="text" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/textViewApellido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_apellido" />

                    <EditText
                        android:id="@+id/txt_apellido"
                        android:layout_width="170dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="115dp"
                        android:background="@color/color_blanco"
                        android:inputType="text" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutCelular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textViewCelular1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_celular1" />

                    <EditText
                        android:id="@+id/txt_celular1"
                        android:layout_width="170dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="112dp"
                        android:background="@color/color_blanco"
                        android:inputType="number"
                        android:maxLength="9" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_celular2" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/txt_celular2"
                            android:layout_width="170dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="111dp"
                            android:background="@color/color_blanco"
                            android:inputType="number"
                            android:maxLength="9" />

                        <TextView
                            android:layout_gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(*) Dato opcional"
                            android:layout_marginRight="65dp"
                            android:textColor="@android:color/holo_red_light"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutEmailFechaNac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textViewEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_email" />

                    <EditText
                        android:id="@+id/txt_Email"
                        android:layout_width="170dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="128dp"
                        android:background="@color/color_blanco"
                        android:inputType="textEmailAddress" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/textViewFechaNac"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_fecha_nac" />

                    <TextView
                        android:id="@+id/txt_fechaNac"
                        android:layout_width="170dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="100dp"
                        android:background="@color/color_blanco"
                        android:gravity="center"
                        android:onClick="setDate" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutClaveComsulta"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/tv_clave_para_consulta" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/linearLayoutPassword1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="70dp"
                            android:text="@string/tv_password" />

                        <EditText
                            android:id="@+id/txt_contraseña"
                            android:layout_width="190dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="20.3dp"
                            android:background="@color/color_blanco"
                            android:inputType="textPassword" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayoutRePassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/linearLayoutPassword1"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="70dp"
                            android:text="@string/tv_re_password" />

                        <EditText
                            android:id="@+id/txt_re_contraseña"
                            android:layout_width="190dp"
                            android:layout_height="30dp"
                            android:background="@color/color_blanco"
                            android:inputType="textPassword" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="90dp"
                    android:text="@string/tv_tipo_abonos_beneficiario" />

                <Spinner
                    android:id="@+id/sp_tipo_abono_beneficiario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/spinner_selector" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutContinuar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linearLayoutPassword"
                android:layout_marginTop="60dp"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_agregar_cuenta_beneficiario"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:text="@string/btn_agregar_cuenta"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btn_agregar_tarjeta_beneficiario"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:text="@string/btn_agregar_tarjeta"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/btn_continuar_beneficiario"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:text="@string/btn_guardar" />

                <Button
                    android:id="@+id/btnRegresar"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/btn_regresar" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>
