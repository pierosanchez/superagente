<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorfondoactivity"
    tools:context="com.example.ctorres.superagentemovil3.superagente.ConformidadClienteRecarga">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/textViewInfoElectronica"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorFondo"
            android:gravity="center"
            android:text="@string/tv_titulo_recarga_conforCli"
            android:textColor="@color/color_blanco"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@color/color_blanco"
            android:text="@string/tv_nom_cli_confor_Recarga"/>

        <TextView
            android:id="@+id/txt_confor_nomCli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_blanco"
            android:gravity="right"
            android:text="@string/tv_resp_confor_cliRecarga"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@color/color_blanco"
            android:text="@string/tv_nro_confor_cliRecarga" />

        <TextView
            android:id="@+id/txt_confor_fonoCli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_blanco"
            android:gravity="right"
            android:text="@string/tv_resp_confor_cliRecarga" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@color/color_blanco"
            android:text="@string/tv_tarje_confor_cliRecarga" />

        <TextView
            android:id="@+id/txt_confor_tarjetaCli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_blanco"
            android:gravity="right"
            android:text="@string/tv_resp_confor_cliRecarga" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_confor_nomtipoMon"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/color_blanco"
            android:gravity="center"
            android:text="@string/tv_total_confor_cliRecarga" />

        <TextView
            android:id="@+id/txt_confor_tipoMon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_blanco"
            android:gravity="right"
            android:layout_marginLeft="2dp"
            android:textColor="@color/color_rojo"
            android:text="@string/tv_no" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@color/color_blanco"
            android:text="@string/tv_comi_confor_cliRecarga" />

        <TextView
            android:id="@+id/txt_confor_comisionCli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_blanco"
            android:gravity="right"
            android:text="@string/tv_resp_confor_cliRecarga" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/color_blanco"
            android:text="@string/tv_total_confor_cliRecarga" />

        <TextView
            android:id="@+id/txt_confor_totalCli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_blanco"
            android:gravity="right"
            android:layout_marginLeft="2dp"
            android:textColor="@color/color_rojo"
            android:text="@string/tv_no" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_regresar_actualizacion_cuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_confor_confirmaRecarga" />

    </LinearLayout>




</LinearLayout>
