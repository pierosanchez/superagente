<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorfondoactivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/bg_key">

        <ImageView
            android:id="@+id/iv_emisor_tarjeta"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/tv_tarjeta_beneficiario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/black"/>

        <ImageView
            android:id="@+id/iv_editar_tarjeta_beneficiario"
            android:layout_width="22dp"
            android:layout_height="29dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_edit" />

        <ImageView
            android:id="@+id/iv_eliminar_tarjeta_beneficiario"
            android:layout_width="22dp"
            android:layout_height="29dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_delete" />

    </LinearLayout>

</LinearLayout>